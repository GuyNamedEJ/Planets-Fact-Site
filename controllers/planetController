const fetch = require('node-fetch')
const data = require('../data.json')


const mercuryData = data[0]
const venusData = data[1]
const earthData = data[2]
const marsData = data[3]
const jupiterdata = data[4]
const saturnData = data[5]
const uranusData = data[6]
const neptuneData = data[7]


// When this is called, it will render the index page
const mercuryView = (req,res) => { 
    const planet = mercuryData.name
    const overview = mercuryData.overview.content
    const structure = mercuryData.structure.content
    const geology = mercuryData.geology.content
    const rotation = mercuryData.rotation
    const revolution = mercuryData.revolution
    const radius = mercuryData.radius
    const temperature = mercuryData.temperature
    const planetImg = mercuryData.images.planet
    const internalImg = mercuryData.images.internal
    const geologyImg = mercuryData.images.geology

    const source = mercuryData.overview.source

    res.render('index.ejs', {
        planet: planet,
        overview: overview,
        rotation: rotation,
        revolution: revolution,
        radius: radius, 
        temperature: temperature,
        structure: structure,
        geology: geology,
        planetImg: planetImg,
        internalImg: internalImg,
        geologyImg: geologyImg,
        source: source
    })
}

